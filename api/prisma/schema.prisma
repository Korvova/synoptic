generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Room {
  id          Int       @id @default(autoincrement())
  name        String
  background  String?   // путь к фоновому изображению
  webhookUrl  String?   // URL для вебхуков
  elements    Element[]
}

model Element {
  id           Int         @id @default(autoincrement())
  room         Room        @relation(fields: [roomId], references: [id])
  roomId       Int
  type         ElementType @relation(fields: [typeId], references: [id])
  typeId       Int
  x            Float
  y            Float
  volume       Int?
  state        String      // "on" | "off"
  label        String?
  device       Device?     @relation(fields: [deviceId], references: [id])
  deviceId     Int?
  user         User?       @relation(fields: [userId], references: [id])
  userId       Int?
  imgWithoutId String?     // фонэлементбезid
  imgWithId    String?     // фонэлементсид
  imgOn        String?     // фонэлементвкл
  imgOff       String?     // фонэлементвыкл
}

model ElementType {
  id           Int       @id @default(autoincrement())
  name         String    @unique
  imgWithoutId String?
  imgWithId    String?
  imgOn        String?
  imgOff       String?
  elements     Element[]
}

model Device {
  id         Int       @id @default(autoincrement())
  identifier String    @unique
  elements   Element[]
}

model User {
  id         Int       @id @default(autoincrement())
  identifier String    @unique
  name       String?
  elements   Element[]
}
